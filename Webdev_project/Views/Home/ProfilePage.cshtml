
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
}

@*<h2 style="padding:20rem;">Profile</h2>*@


<section id="myprofile" style="padding-top: 104px;" class="user-profile">

    <h1 class="heading">My Profile</h1>

    <div class="info">

        <div class="user">
            <img src="~/Content/assets/img/112.jpg" alt="">
            <h3>Jayclark</h3>
            <p>student</p>
            @*<a href="" class="inline-btn bg-primary">update profile</a>*@
        </div>

    </div>

    <section class="form-container" id="updateprofile">

        <form action="" method="post">
            <h3>update profile</h3>
            <p>Firstname</p>
            <input type="text" name="firstname" placeholder="" maxlength="50" class="box">
            <p>Lastname</p>
            <input type="text" name="lastname" placeholder="" maxlength="50" class="box">
            <p>Gender</p>

            @*<input type="text" name="gender" placeholder="" maxlength="50" class="box">*@

            <div class="gedr" style="
                  display: flex;
                  justify-content: space-around;
                  align-items: center;
                ">
                <label style="cursor: pointer">
                    <input type="radio" name="gender" value="male" />
                    <span>Male</span>
                </label>
                <label style="cursor: pointer">
                    <input type="radio" name="gender" value="female" />
                    <span>Female</span>
                </label>
            </div>

            <p>Address</p>
            <input type="text" name="address" placeholder="" maxlength="50" class="box">
            <p>Email</p>
            <input type="email" name="email" placeholder="" maxlength="50" class="box">
            <p>Old Password</p>
            <input type="password" name="old-password" placeholder="" maxlength="20" class="box">
            <p>new password</p>
            <input type="password" name="new_pass" placeholder="" maxlength="20" class="box">

            <div class="updateBtn">
                <input type="submit" value="update profile" name="submit" class="inline-btn bg-primary">
            </div>
        </form>

    </section>

</section>

